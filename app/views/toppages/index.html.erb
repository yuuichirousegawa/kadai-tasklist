<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <%= form_for(@task) do |f| %>
        <div class="form-group">
          <h1>タスク新規作成ページ</h1>
            <%= render 'tasks/form', task: @task %>
            <%= link_to '一覧に戻る', tasks_path %>
      <% end %>
    </aside>
    <div class="col-xs-8">
      <%= render 'tasks/tasks', tasks: @tasks %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <div class="text-center">
    <h1>Welcome to the Tasklists</h1>
    <%= link_to 'Signup', signup_path, class: 'btn btn-primary' %>
  </div>
</div>
<% end %>